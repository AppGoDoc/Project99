<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_carregando"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:fontFamily="cursive"
        android:text="@string/selecione_o_tipo_de_rota"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/card_ape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_icon_route_select"
            android:layout_height="@dimen/size_icon_route_select"
            android:padding="@dimen/padding_icon_route_select"
            app:srcCompat="@drawable/ic_walk" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_text_icon_route_select"
            android:layout_marginLeft="@dimen/margin_text_icon_route_select"
            android:layout_marginEnd="@dimen/margin_text_icon_route_select"
            android:layout_marginRight="@dimen/margin_text_icon_route_select"
            android:fontFamily="cursive"
            android:gravity="start|center_vertical"
            android:text="@string/caminhando"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_bike"
        android:layout_width="match_parent"
