<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_ape"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/andar_imagem" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_bike"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintLeft_toRightOf="@+id/card_ape"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bicicleta_imagem" />


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_bus"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/card_ape">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/onibus_imagem"/>



    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_car"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/card_ape"
        app:layout_constraintLeft_toRightOf="@id/card_bus">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/carro_imagem"/>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>