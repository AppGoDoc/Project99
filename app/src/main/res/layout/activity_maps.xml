    <ImageView
        android:id="@+id/img_filtro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_filter_pos" />

    <EditText
        android:id="@+id/edt_address_search"
        android:layout_width="589dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/img_filtro"
        android:layout_toLeftOf="@+id/img_filtro"
        android:background="@drawable/bg_carregando"
        android:ems="10"
        android:hint="Pesquisar por endereÃ§o..."
