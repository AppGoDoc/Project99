        android:padding="5dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp" />

    <ImageView
        android:id="@+id/btn_taxi"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/img_filtro"
        android:layout_alignBottom="@+id/img_filtro"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/img_filtro"
        android:layout_toLeftOf="@+id/img_filtro"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_btn_taxi" />

    <ImageView
        android:id="@+id/search_onmap"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@id/img_filtro"
        android:layout_alignBottom="@id/img_filtro"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_toStartOf="@+id/btn_taxi"
        android:layout_toLeftOf="@+id/btn_taxi"
        app:srcCompat="@drawable/ic_magnifier_pos" />

    <ProgressBar
        android:id="@+id/progress_itens"
        style="?android:attr/progressBarStyle"
